<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/user", user:@user %>
      <%= render "books/book", book:@book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <therd>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </therd>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:"60x60" %></td>
              <td><%= user.name %></td>
              <td>
                <%= link_to user_path(user.id) do %>
                  Show
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
