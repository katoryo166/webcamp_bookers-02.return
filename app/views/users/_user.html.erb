<h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size:"100x100" %>
      <table class="table">
        <tbody>
          <tr>
            <td>name</td>
            <td><%= user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to  edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>